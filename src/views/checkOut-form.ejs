<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="css/index.css">
<link rel="stylesheet" type="text/css" href="css/details.css">
<meta name="viewport" content="width=device-width,initial-scale=1">

<% include partials/header.ejs%>
<div class="container">
    <form method='POST' action='/checkout'>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-5 col-sm-12  form-container">
                <div class="heading-div">
                    <h3>Check Out</h3>
                </div>    
                <div class="form-group">
                    <label for="email">Please confirm your email</label>
                    <input type="email" value="<%= visitorEmail %>"class="form-control" id="email" placeholder="Enter email" name='visitor-email' required>
                </div>
                <div class="submit-button">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>
