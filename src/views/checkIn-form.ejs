<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="css/index.css">
<link rel="stylesheet" type="text/css" href="css/details.css">
<meta name="viewport" content="width=device-width,initial-scale=1">

<% include partials/header.ejs %>

<div class="container">
    <form method='POST' action='/checkin'>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-5 col-sm-12  form-container">
                <div class="heading-div">
                    <h3>Check In</h3>
                </div>    
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter name" name='visitor-name' required>
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name='visitor-email' required>
                    <small id="emailHelp" class="form-text text-muted">You will need this while checking out.</small>
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="tel" class="form-control" id="phone" placeholder="Enter Phone Number" name='visitor-phone' maxlength='10' size='10'required>
                </div>

                <div class="form-group">
                    <label>Host Email</label><br>
                    <select name='host-email'>
                        <% for(let i=0;i<hosts.length;i++){ %>
                            <option value="<%= hosts[i].email %>"><%= hosts[i].email%> (<%= hosts[i].name %>)</option>
                        <% } %>
                    </select>
                </div>
                <!--<div class="form-group">
                    <label for="host-email">Host Email</label>
                    <input type="email" class="form-control" id="host-email" placeholder="Enter Your Host Email" name='host-email' required>
                </div>-->
                <div class="submit-button"> 
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>
